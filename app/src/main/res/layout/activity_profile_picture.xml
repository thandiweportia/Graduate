<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilePicture">

    <TextView
        android:id="@+id/profileText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="70dp"
        android:text="You can update your profile picture here or in your profile setting"
        android:textColor="@color/grey"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/finishBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/profilePictureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="53dp"
        android:text="Profile Picture"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageProfile"
        app:layout_constraintEnd_toEndOf="@+id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="228dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toTopOf="@+id/profileText"
        app:layout_constraintStart_toStartOf="@+id/profileText"
        app:layout_constraintTop_toBottomOf="@+id/profilePictureText"
        app:srcCompat="@mipmap/ic_launcher_foreimage"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/finishBtn"
        android:layout_width="306dp"
        android:layout_height="71dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="55dp"
        app:backgroundTint="@color/cyan"
        android:background="@drawable/custom_edittext"
        android:text="Finish"
        app:textAllCaps="false"
        android:textSize="20sp"
        app:circularflow_defaultRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileText"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>